{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "node",
      "lib": ["ES2022", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      
      "rootDir": "./src",   // look for source files here
      "outDir": "./www"     // put compiled javascript files here
    },
    "include": [
      "./src/**/*.ts"   // compile all .ts files inside the src directory
    ]
  }